@page
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["title"];
}
    <section role="contentinfo">
        <nav role="navigation" id="wb-bc" property="breadcrumb">
            <h2>
                @Localizer["You are here:"]
            </h2>
            <div class="row">
                <ol class="breadcrumb">
                    <li><a href="../../../Homepage">@Localizer["Home"]</a></li>
                    <li><a href="../../Index">@Localizer["Candidate"]</a></li>
                    <li><a href="../Index">@Localizer["Seagoing"]</a></li>
                    <li><a class="breadcrumb-item active" aria-current="page">@Localizer["Crew"]</a></li>
                </ol>
            </div>
        </nav>
        <nav role="navigation">
            <h2 class="wb-inv">Document navigation</h2>
            <ul class="pager">
                <li class="previous"><a asp-page="../Index" class="btn btn-default" type="button" rel="prev">@Localizer["Previous"]</a></li>
            </ul>
        </nav>
        <h2 class="mrgn-bttm-xl">@Localizer["Q1"]</h2>
        <div class="row">

            <div class="col-md-4 col-sm-4 mrgn-bttm-md">
                <a alt="@Localizer["searchdeck"]" style="text-decoration:none" class="nav-link" asp-page="Deck/PositionList">
                    <figure class="thumbnail eqht-trgt" style="vertical-align: top;">
                        <div class="img-container">
                            <figcaption class="caption text-center"><h3 class="mrgn-tp-0">@Localizer["Deck"]</h3></figcaption>
                            <img src="~/img/CCGMember/SC.jpg" alt="@Localizer["PhotoDeck"]" class="img-responsive center" />
                        </div>
                    </figure>
                </a>
            </div>

            <div class="col-md-4 col-sm-4 mrgn-bttm-md">
                <a alt="@Localizer["searchengineering"]" style="text-decoration:none" class="nav-link" asp-page="Engineering/PositionList">
                    <figure class="thumbnail eqht-trgt" style="vertical-align: top;">
                        <div class="img-container">
                            <figcaption class="caption text-center"><h3 class="mrgn-tp-0">@Localizer["Engineering"]</h3></figcaption>
                            <img src="~/img/CCGMember/Oiler.jpg" alt="@Localizer["PhotoEngineer"]" class="img-responsive center" />
                        </div>
                    </figure>
                </a>
            </div>


            <div class="col-md-4 col-sm-4 mrgn-bttm-md">
                <a alt="@Localizer["searchlogistics"]" style="text-decoration:none" class="nav-link" asp-page="Logistics/PositionList">
                    <figure class="thumbnail eqht-trgt" style="vertical-align: top;">
                        <div class="img-container">
                            <figcaption class="caption text-center"><h3 class="mrgn-tp-0">@Localizer["Logistics"]</h3></figcaption>
                            <img src="~/img/CCGMember/GS.jpg" alt="@Localizer["PhotoLogistics"]" class="img-responsive center" />
                        </div>
                    </figure>
                </a>
            </div>
            

        </div>
    </section>

