@page
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["title"];
}
    <section role="contentinfo">
        <nav role="navigation" id="wb-bc" property="breadcrumb">
            <h2>
                @Localizer["You are here:"]
            </h2>
            <div class="row">
                <ol class="breadcrumb">
                    <li><a href="../../../Index">@Localizer["Home"]</a></li>
                    <li><a href="../../Index">@Localizer["Candidate"]</a></li>
                    <li><a href="../Index">@Localizer["Seagoing"]</a></li>
                    <li><a class="breadcrumb-item active" aria-current="page">@Localizer["Crew"]</a></li>
                </ol>
            </div>
        </nav>
        <nav role="navigation">
            <h2 class="wb-inv">Document navigation</h2>
            <ul class="pager">
                <li class="previous"><a asp-page="../Index" class="btn btn-default" type="button" rel="prev">@Localizer["Previous"]</a></li>
            </ul>
        </nav>
        <h2>@Localizer["Q1"]</h2>
        <div class="row">
            <div class="col-md-4 col-sm-6">
                <figure>
                    <a alt="Link to seagoing crew deck positions" style="text-decoration:none" class="nav-link" asp-page="Deck/PositionList">
                        <figcaption><h4 class="text-center">@Localizer["Deck"]</h4></figcaption>
                        <img src="~/img/CCGMember/SC.jpg" alt="@Localizer["PhotoDeck"]" class="img-thumbnail img-responsive mrgn-bttm-sm" />
                    </a>
                </figure>
            </div>
            <div class="col-md-4 col-sm-6">
                <figure>
                    <a alt="Link to seagoing crew engineering positions" style="text-decoration:none" class="nav-link" asp-page="Engineering/PositionList">
                        <figcaption><h4 class="text-center">@Localizer["Engineering"]</h4></figcaption>
                        <img src="~/img/CCGMember/Oiler.jpg" alt="@Localizer["PhotoEngineer"]" class="img-thumbnail img-responsive mrgn-bttm-sm" />
                    </a>
                </figure>
            </div>
            <div class="col-md-4 col-sm-6">
                <figure>
                    <a alt="Link to seagoing crew logistics positions" style="text-decoration:none" class="nav-link" asp-page="Logistics/PositionList">
                        <figcaption><h4 class="text-center">@Localizer["Logistics"]</h4></figcaption>
                        <img src="~/img/CCGMember/GS.jpg" alt="@Localizer["PhotoLogistics"]" class="img-thumbnail img-responsive mrgn-bttm-sm" />
                    </a>
                </figure>
            </div>
        </div>
    </section>

