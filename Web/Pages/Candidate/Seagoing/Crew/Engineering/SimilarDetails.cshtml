@page
@model Web.Pages.Candidate.Seagoing.Crew.Engineering.SimilarDetailsModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "SimilarDetails";
}

@{
    var isEnglish = System.Threading.Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName == "en";
    var routedata = new Dictionary<string, string>
{
        {"positionid" , Model.Id.ToString()},
         { "obj",  Model.PositionId.ToString()}

    };
}
    <section role="contentinfo">
        <div class="col-md-12 mrgn-tp-md mrgn-bttm-md">
            <a href="#print"><span class="glyphicon glyphicon-print pull-right mrgn-lft-md" alt="Print document"></span> </a>
            <a href="#save"><span class="glyphicon glyphicon-save pull-right" alt="Save document"></span> </a>
        </div>

        <div class="col-md-12 mrgn-tp-md mrgn-bttm-md">
            <div class="col-md-9"><h3>Would you like to compare or find similar positions to the position below?</h3></div>
            <div class="col-md-3 mrgn-tp-lg"> <a class="btn btn-primary mrgn-rght-md" type="button" asp-route-positionid="@Model.PositionId" asp-page="../../../../CCGMember/Compare/AllObjective">@Localizer["Compare"]</a>         
            <a class="btn btn-primary mrgn-rght-md" type="button" asp-route-positionid="@Model.PositionId" asp-page="../../../../CCGMember/Similar/SimilarSearch">@Localizer["Similar"]</a></div>
        </div>

        <table class="table table-hover table-bordered mrgn-tp-lg" width="100%" border="0" cellspacing="0" cellpadding="0">
            <thead>
                <tr>
                    <th class="bg-primary" colspan="2">@Localizer["POSITION DETAILS"]: @Model.Position.JobGroupCode-@Model.Position.JobGroupLevelValue @(isEnglish ? Model.Position.JobTitleEng : Model.Position.JobTitleFre)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th style="background-color:#f2f2f2" colspan="2">@Localizer["CERTIFICATIONS"]</th>
                </tr>

                @if (Model.PositionCertificates.Any())
                {
                    @foreach (var c in Model.PositionCertificates)
                    {
                        <tr>
                            <td colspan="2">@(isEnglish ? c.NameEng : c.NameFre)</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2">@Localizer["No Certifications"]</td>
                    </tr>
                }
                @if (Model.PositionRatings1.Any())
                {
                    <tr>
                        <th style="background-color:#f2f2f2" width="80%">@Localizer["KNOWLEDGE ELEMENTS"]</th>
                        <th style="background-color:#f2f2f2" class="text-center" width="20%">@Localizer["Level"]</th>
                    </tr>
                    @foreach (var c in Model.PositionRatings1)
                    {
                        var key1 = "a" + c.CompetencyId.ToString();
                        var key2 = "b" + c.CompetencyId.ToString();
                        <tr>
                            <td>
                                <a href="#@key1" aria-controls="centred-popup" class="wb-lbx" role="button">
                                    @(isEnglish ? c.CompetencyNameEng : c.CompetencyNameFre)
                                </a>
                                <section id="@key1" class="mfp-hide modal-dialog modal-content overlay-def">
                                    <header class="modal-header">
                                        <h2 class="modal-title">@(isEnglish ? c.CompetencyNameEng : c.CompetencyNameFre)</h2>
                                    </header>
                                    <div class="modal-body ">
                                        <p>@(isEnglish ? c.CompetencyDescEng : c.CompetencyDescFre)</p>
                                        <button class="btn btn-primary popup-modal-dismiss" type="button">@Localizer["Close"]</button>
                                    </div>
                                </section>
                            </td>
                            <td class="text-center">
                                <a href="#@key2" aria-controls="centred-popup" class="wb-lbx">
                                    <abbr title="Level @c.RatingValue Summary">
                                        @c.RatingValue
                                    </abbr>
                                </a>
                                <section id="@key2" class="mfp-hide modal-dialog modal-content overlay-def">
                                    <header class="modal-header">
                                        <h2 class="modal-title">@Localizer["Position Level"]: @c.RatingValue</h2>
                                    </header>
                                    <div class="modal-body ">
                                        <p>@(isEnglish ? c.RatingNameEng : c.RatingNameFre) @(isEnglish ? c.RatingDescEng : c.RatingDescFre)</p>
                                        <p>@(isEnglish ? c.CompetencyLevelReqDescEng : c.CompetencyLevelReqDescFre)<p>
                                            <button class="btn btn-primary popup-modal-dismiss" type="button">@Localizer["Close"]</button>
                                    </div>
                                </section>
                            </td>
                        </tr>
                    }
                }
                @if (Model.PositionRatings2.Any())
                {
                    <tr>
                        <th style="background-color:#f2f2f2" width="80%">@Localizer["TECHNICAL ELEMENTS"]</th>
                        <th style="background-color:#f2f2f2" class="text-center" width="20%">@Localizer["Level"]</th>
                    </tr>
                    @foreach (var c in Model.PositionRatings2)
                    {
                        var key1 = "c" + c.CompetencyId.ToString();
                        var key2 = "d" + c.CompetencyId.ToString();
                        <tr>
                            <td>
                                <a href="#@key1" aria-controls="centred-popup" class="wb-lbx" role="button">
                                    @(isEnglish ? c.CompetencyNameEng : c.CompetencyNameFre)
                                </a>
                                <section id="@key1" class="mfp-hide modal-dialog modal-content overlay-def">
                                    <header class="modal-header">
                                        <h2 class="modal-title">@(isEnglish ? c.CompetencyNameEng : c.CompetencyNameFre)</h2>
                                    </header>
                                    <div class="modal-body ">
                                        <p>@(isEnglish ? c.CompetencyDescEng : c.CompetencyDescFre)</p>
                                        <button class="btn btn-primary popup-modal-dismiss" type="button">Close</button>
                                    </div>
                                </section>
                            </td>
                            <td class="text-center">
                                <a href="#@key2" aria-controls="centred-popup" class="wb-lbx">
                                    <abbr title="Level @c.RatingValue Summary">
                                        @c.RatingValue
                                    </abbr>
                                </a>
                                <section id="@key2" class="mfp-hide modal-dialog modal-content overlay-def">
                                    <header class="modal-header">
                                        <h2 class="modal-title">@Localizer["Position Level"]: @c.RatingValue</h2>
                                    </header>
                                    <div class="modal-body ">
                                        <p>@(isEnglish ? c.RatingNameEng : c.RatingNameFre) @(isEnglish ? c.RatingDescEng : c.RatingDescFre)</p>
                                        <p>@(isEnglish ? c.CompetencyLevelReqDescEng : c.CompetencyLevelReqDescFre)<p>
                                            <button class="btn btn-primary popup-modal-dismiss" type="button">@Localizer["Close"]</button>
                                    </div>
                                </section>
                            </td>
                        </tr>
                    }
                }
                @if (Model.PositionRatings3.Any())
                {
                    <tr>
                        <th style="background-color:#f2f2f2" width="80%">@Localizer["BEHAVIOURAL ELEMENTS"]</th>
                        <th style="background-color:#f2f2f2" class="text-center" width="20%">@Localizer["Level"]</th>
                    </tr>
                    @foreach (var c in Model.PositionRatings3)
                    {
                        var key1 = "e" + c.CompetencyId.ToString();
                        var key2 = "f" + c.CompetencyId.ToString();
                        <tr>
                            <td>
                                <a href="#@key1" aria-controls="centred-popup" class="wb-lbx" role="button">
                                    @(isEnglish ? c.CompetencyNameEng : c.CompetencyNameFre)
                                </a>
                                <section id="@key1" class="mfp-hide modal-dialog modal-content overlay-def">
                                    <header class="modal-header">
                                        <h2 class="modal-title">@(isEnglish ? c.CompetencyNameEng : c.CompetencyNameFre)</h2>
                                    </header>
                                    <div class="modal-body ">
                                        <p>@(isEnglish ? c.CompetencyDescEng : c.CompetencyDescFre)</p>
                                        <button class="btn btn-primary popup-modal-dismiss" type="button">Close</button>
                                    </div>
                                </section>
                            </td>
                            <td class="text-center">
                                <a href="#@key2" aria-controls="centred-popup" class="wb-lbx">
                                    <abbr title="Level @c.RatingValue Summary">
                                        @c.RatingValue
                                    </abbr>
                                </a>
                                <section id="@key2" class="mfp-hide modal-dialog modal-content overlay-def">
                                    <header class="modal-header">
                                        <h2 class="modal-title">@Localizer["Position Level"]: @c.RatingValue</h2>
                                    </header>
                                    <div class="modal-body ">
                                        <p>@(isEnglish ? c.RatingNameEng : c.RatingNameFre) @(isEnglish ? c.RatingDescEng : c.RatingDescFre)</p>
                                        <p>@(isEnglish ? c.CompetencyLevelReqDescEng : c.CompetencyLevelReqDescFre)<p>
                                            <button class="btn btn-primary popup-modal-dismiss" type="button">@Localizer["Close"]</button>
                                    </div>
                                </section>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </section>



