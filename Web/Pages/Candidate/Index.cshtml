@page
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["title"];
}

    <section role="contentinfo">
        <nav role="navigation" id="wb-bc" property="breadcrumb">
            <h2>
                @Localizer["You are here:"]
            </h2>
            <div class="row">
                <ol class="breadcrumb">
                    <li><a asp-page="../Homepage">@Localizer["Home"]</a></li>
                    <li><a class="breadcrumb-item active" aria-current="page">@Localizer["Candidate"]</a></li>
                </ol>
            </div>
        </nav>
        <nav role="navigation">
            <h2 class="wb-inv">Document navigation</h2>
            <ul class="pager">
                <li class="previous"><a asp-page="../Index" class="btn btn-default" type="button" rel="prev">@Localizer["Previous"]</a></li>
            </ul>
        </nav>

        <h2 class="mrgn-bttm-lg">@Localizer["Question1"]</h2>

        <div class="row">
            <div class="col-md-4 col-sm-4 mrgn-bttm-md">
                <a alt="@Localizer["searchshoreside"]" style="text-decoration:none" class="nav-link" asp-page="Shoreside/AllCandidateShoreside">
                    <figure class="thumbnail eqht-trgt" style="vertical-align: top;">
                        <div class="img-container">
                            <figcaption class="caption text-center"><h3 class="mrgn-tp-0">@Localizer["Shoreside"]</h3></figcaption>
                            <img src="~/img/Candidate/shoreside.jpg" alt="@Localizer["PhotoShoreside"]" class="img-responsive center" />
                        </div>
                    </figure>
                </a>
            </div>

            <div class="col-md-4 col-sm-4 mrgn-bttm-md">
                <a alt="@Localizer["searchseagoing"]" style="text-decoration:none" class="nav-link" asp-page="Seagoing/Index">
                    <figure class="thumbnail eqht-trgt" style="vertical-align: top;">
                        <div class="img-container">
                            <figcaption class="caption text-center"><h3 class="mrgn-tp-0">@Localizer["Seagoing"]</h3></figcaption>
                            <img src="~/img/Candidate/Seagoing.jpg" alt="@Localizer["PhotoSeagoing"]" class="img-responsive center" />
                        </div>
                    </figure>
                </a>
            </div>

        </div>

    </section>