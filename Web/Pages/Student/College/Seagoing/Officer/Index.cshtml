@page
@model Web.Pages.Student.College.Seagoing.Officer.IndexModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["ShipsOfficer"];
}
    <section role="contentinfo">
        <nav role="navigation" id="wb-bc" property="breadcrumb">
            <h2 class="wb-inv">
                @Localizer["You are here:"]
            </h2>
            <div class="row">
                <ol class="breadcrumb">
                    <li><a asp-page="../../../../Homepage">@Localizer["Home"]</a></li>
                    <li><a asp-page="../../../Index">@Localizer["Student"]</a></li>
                    <li><a asp-page="../../Index">@Localizer["TechCollege"]</a></li>
                    <li><a asp-page="../Index">@Localizer["Seagoing"]</a></li>
                    <li><a class="breadcrumb-item active" aria-current="page">@Localizer["Officer"]</a></li>
                </ol>
            </div>
        </nav>
        <nav role="navigation">
            <h2 class="wb-inv">Document navigation</h2>
            <ul class="pager">
                <li class="previous"><a asp-page="../Index" class="btn btn-default" type="button" rel="prev">@Localizer["Previous"]</a></li>
            </ul>
        </nav>
        <div class="col-md-12">
            <h2 class="mrgn-bttm-lg">@Localizer["Q1"]</h2>
            
            <div class="row">
                <div class="col-md-4 col-sm-4 mrgn-bttm-md">
                    <a style="text-decoration:none" class="nav-link" asp-page="Deck">
                        <figure class="thumbnail eqht-trgt" style="vertical-align: top;">
                            <div class="img-container">
                                <figcaption class="caption text-center"><h3 class="mrgn-tp-0">@Localizer["Deck"]</h3></figcaption>
                                <img src="~/img/CCGMember/Officer-Nav.jpg" alt="@Localizer["PhotoDeck"]" class="img-responsive center" />
                            </div>
                        </figure>
                    </a>
                </div>
                <div class="col-md-4 col-sm-4 mrgn-bttm-md">
                    <a style="text-decoration:none" class="nav-link" asp-page="Engineering">
                        <figure class="thumbnail eqht-trgt" style="vertical-align: top;">
                            <div class="img-container">
                                <figcaption class="caption text-center"><h3 class="mrgn-tp-0">@Localizer["Engineering"]</h3></figcaption>
                                <img src="~/img/Candidate/Officer Chief Engineer.jpg" alt="@Localizer["PhotoEngineer"]" class="img-responsive center" />
                            </div>
                        </figure>
                    </a>
                </div>
                <div class="col-md-4 col-sm-4 mrgn-bttm-md">
                    <a style="text-decoration:none" class="nav-link" asp-page="Logistics">
                        <figure class="thumbnail eqht-trgt" style="vertical-align: top;">
                            <div class="img-container">
                                <figcaption class="caption text-center"><h3 class="mrgn-tp-0">@Localizer["Logistics"]</h3></figcaption>
                                <img src="~/img/Student/OfficerLogistics.jpg" alt="@Localizer["PhotoLogistics"]" class="img-responsive center" />
                            </div>
                        </figure>
                    </a>
                </div>
            </div>
        </div>
