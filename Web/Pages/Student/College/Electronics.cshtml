@page
@model Web.Pages.Student.College.ElectronicsModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["title"];
    var isEnglish = System.Threading.Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName == "en";
    var pdapText = string.Empty;
    var pdapUrl = Localizer["MELDEVUrl"];
    var space = string.Empty;
}

    <div class="col-md-12 mrgn-tp-md mrgn-bttm-md">
        <a title="@Localizer["print"]" target="_blank" href="@Url.Action("StudentPositionsList", "ToPdf", new { ShoresideIds = Model.ShoresidePositionIds, SeagoingIds = Model.SeagoingPositionIds, language = System.Threading.Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName})"><span class="glyphicon glyphicon-print pull-right mrgn-lft-md" alt="@Localizer["print"]"></span> </a>
        <a title="@Localizer["save"]" target="_blank" href="@Url.Action("StudentPositionsList", "ToPdf", new { ShoresideIds = Model.ShoresidePositionIds, SeagoingIds = Model.SeagoingPositionIds, language = System.Threading.Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName})"><span class="glyphicon glyphicon-save pull-right" alt="@Localizer["save"]"></span> </a>
    </div>
<div class="mrgn-tp-lg">
    <h3 class="text-center">@Localizer["seagoing"]</h3>

    <table class="table table-hover table-responsive table-bordered">
        <thead>
            <tr>
                <th class="bg-primary" width="15%">@Localizer["level"]</th>
                <th class="bg-primary" width="73%">@Localizer["position"]</th>
                <th class="bg-primary" width="12%"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.SeagoingPositions.Any(e => e.Active != 0))
            {
                @foreach (var position in Model.SeagoingPositions.Where(e => e.Active != 0))
                {
                        var routedata = new Dictionary<string, string>
                 {
                    {"previouspage", "../../../Student/College/Electronics" },
                    { "positionid",  position.JobTitleId.ToString()},
                 };
                    <tr>
                        <td>@position.LevelCode</td>
                        <td>@(isEnglish ? position.JobTitleEng : position.JobTitleFre)</td>
                        <td><a asp-page="../../Candidate/Seagoing/Common/Details" asp-all-route-data="@routedata" role="button">@Localizer["More Details"]</a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td></td>
                    <td>@Localizer["noseagoing"]</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>


    <h3 class="text-center">@Localizer["shoreside"]</h3>
    <table class="table table-hover table-responsive table-bordered">
        <thead>
            <tr>
                <th class="bg-primary" width="15%">@Localizer["level"]</th>
                <th class="bg-primary" width="73%">@Localizer["position"]</th>
                <th class="bg-primary" width="12%"></th>
            </tr>
        </thead>

        <tbody>
            @if (Model.ShoreSidePositions.Any(e => e.Active != 0))
            {
                @foreach (var position in Model.ShoreSidePositions.Where(e => e.Active != 0))
                {
                        var routedata = new Dictionary<string, string>
                 {
                    {"previouspage", "../../Student/College/Electronics" },
                    { "positionid",  position.JobTitleId.ToString()},
                 };
                        if (position.JobGroupId == 23)
                        {
                            pdapText = Localizer["PDAPText"].Value;
                            space = " - ";
                        }
            <tr>
                <td>@position.LevelCode</td>
                <td>@(isEnglish ? position.JobTitleEng : position.JobTitleFre)@space<a target="_blank" href=@pdapUrl>@pdapText</a></td>
                <td><a asp-page="../../Candidate/Shoreside/SimilarDetails" asp-all-route-data="@routedata" role="button">@Localizer["More Details"]</a></td>
            </tr>
                }
            }
            else
            {
                <tr>
                    <td></td>
                    <td>@Localizer["noshoreside"]</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>

    <div style="clear:both;">
        <div class="col-lg-12">
            <nav role="navigation">
                <h2 class="wb-inv">Document navigation</h2>
                <ul class="pager">
                    <li class="previous"><a asp-page="AllPositions" class="btn btn-default" type="button" rel="prev">@Localizer["Previous"]</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>
