                                <p class="mrgn-bttm-sm"><strong class="h4">@Localizer["admin"]</strong></p>
                            </div>
                            <div class="col-sm-12 col-xs-5">
                                <img src="~/img/CCGMember/Admin.jpg" alt="@Localizer["PhotoAdmin"]" class="img-responsive center-block" />
