@page
@model Web.Pages.Student.HighSchool.IndexModel
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["HighSchool"];
}

<section role="contentinfo">
    <nav role="navigation" id="wb-bc" property="breadcrumb">
        <h2 class="wb-inv">
            @Localizer["You are here:"]
        </h2>
        <div class="row">
            <ol class="breadcrumb">
                <li><a asp-page="../../Index">@Localizer["Home"]</a></li>
                <li><a asp-page="../Index">@Localizer["Student"]</a></li>
                <li><a class="breadcrumb-item active" aria-current="page">@Localizer["High School"]</a></li>
            </ol>
        </div>
    </nav>
    <nav role="navigation">
        <h2 class="wb-inv">Document navigation</h2>
        <ul class="pager">
            <li class="previous"><a asp-page="../Index" class="btn btn-default" type="button" rel="prev">@Localizer["Previous"]</a></li>
        </ul>
    </nav>

    <div class="cct-HS-img cct-HS-hide-mobile cct-HS-hide-tablet">
        <div class="container">
            <div class="row mrgn-tp-lg mrgn-bttm-lg">
                <div class="col-md-7">
                    <h2 class="mrgn-bttm-lg">@Localizer["Question1"]</h2>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>


    <div class="row wb-eqht wb-init mrgn-tp-md">
        <div class="col-sm-6">
            <div class="well well-sm brdr-rds-0 eqht-trgt position-relative" style="vertical-align: top; min-height: 420px;">
                <h3 class="mrgn-tp-0">@Localizer["Shoreside"]</h3>
                <p>@Localizer["textshoreside"]</p>
                <p>&nbsp;</p>
                <a style="position:absolute; bottom:10px;" asp-page="Shoreside/Index" alt="@Localizer["altsearchshoreside"]" class="btn btn-primary">@Localizer["shoresidebutton"]</a>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="well well-sm brdr-rds-0 eqht-trgt position-relative" style="vertical-align: top; min-height: 420px;">
                <h3 class="mrgn-tp-0">@Localizer["Seagoing"]</h3>
                <p>@Localizer["textseagoing"]</p>
                <p>&nbsp;</p>
                <a style="position:absolute; bottom:10px;" asp-page="Seagoing/Index" alt="@Localizer["altsearchseagoing"]" class="btn btn-primary">@Localizer["seagoingbutton"]</a>
            </div>
        </div>
    </div>
</section>